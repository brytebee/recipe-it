<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>
<div id="recipes">
  <% @recipes.each do |recipe| %>
    <% if can? :read, recipe %>
      <%= render recipe %>
      <p>
        <%= link_to "Show this recipe", recipe %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New recipe", new_recipe_path %>
