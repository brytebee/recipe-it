<div class='flex justify-center items-center mt-32'>
  <div class="block p-6 rounded-lg bg-white w-1/3">
<h4 class='font-bold text-2xl mb-4'>Add Ingredient</h4>
<%= form_with model: [@recipe, @recipe.recipe_foods.create] do |form|%>
<div class="mb-3">
   <label
        for="exampleInputEmail2"
        class="form-label inline-block mb-2 text-gray-700"
        >Select Food</label
      >
  <div>
    <%= form.select :food_id, Food.all.collect {|food| [food.name, food.id]},{
    include_blank: true}, class:'form-select appearance-none
      block
      w-full
      px-3
      py-1.5
      text-base
      font-normal
      text-gray-700
      bg-white bg-clip-padding bg-no-repeat
      border border-solid border-gray-300
      rounded
      transition
      ease-in-out
      m-0
      focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'  %>
  </div>
</div>
<div class="mb-3">
  <%= form.label :quantity  %>
  <div>
    <%= form.number_field :quantity, required: true,
    placeholder: '1', min: 1, class:
      'form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700
      bg-white bg-clip-padding border border-solid border-gray-300 rounded
      transition ease-in-out m-0 focus:text-gray-700 focus:bg-white
      focus:border-blue-600 focus:outline-none'%>
  </div>
</div>

    <%= form.submit "Add", class:'w-full px-6 py-2.5 bg-gray-800 text-white
    font-medium text-xs leading-tight uppercase rounded shadow-md
    hover:bg-blue-700 hover:bg-gray-900 hover:shadow-lg focus:bg-gray-900 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-900 active:shadow-lg transition duration-150 ease-in-out' %>
<%end%>
<div class="mb-3">
  <%=link_to '<< Back', recipe_path(@recipe.id)%>
</div>

 </div>
</div>
